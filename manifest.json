{
  "manifest_version": 2,
  "name": "EasyTFA",
  "version": "0.0.1",
  "description": "Connect your browser with the EasyTFA app to automatically transmit TOTP codes",
  "author": "Mattis Turin-Zelenko",
  "content_scripts": [{
    "matches": ["https://*/*"],
    "js": ["config.js", "content-script.js"],
    "css": ["style.css"],
    "run_at": "document_idle"
  }],
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}
